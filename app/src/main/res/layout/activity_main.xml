<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="78dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/as"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="78dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/iv1"
            android:src="@drawable/jc"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="78dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/iv2"
            android:src="@drawable/qd"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="78dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toEndOf="@+id/iv3"
            android:src="@drawable/kh"
            android:visibility="invisible" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drag"
            android:visibility="gone" />

    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/bottom"
            android:layout_width="143dp"
            android:layout_height="180dp"
            android:background="@android:color/darker_gray"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="78dp"
                android:layout_height="120dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/as" />

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="78dp"
                android:layout_height="120dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="-110dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/jc" />

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="78dp"
                android:layout_height="120dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-110dp"
                android:layout_marginEnd="5dp"
                android:contentDescription="@string/qd" />

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="78dp"
                android:layout_height="120dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="-110dp"
                android:contentDescription="@string/kh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drop_here"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>